@using com.cpc.ext.versa.cms.Models.Entities
@using com.carzapc.core.web

@{
    ViewBag.Title = "Editar usuarios";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <form method="post" action="@(Url.Action(Utils.Ruta.rutaPostEditarUsuario.action, Utils.Ruta.rutaPostEditarUsuario.controller))">
        <input type="hidden" name="usuario-id" value="@ViewBag.usuarioId" />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <h1>Editar usuario</h1>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <label>Nombre de usuario</label>
                    <input type="text" class="form-control" value="@ViewBag.nombre" disabled />
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <label>Correo electrónico</label>
                    <input type="text" class="form-control" value="@ViewBag.correo" disabled />
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <label>Nueva contraseña</label>
                    <input type="text" class="form-control" name="pass-uno" required />
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12 col-md-12 text-right">
                    <button type="submit" class="btn btn-info">Enviar</button>
                </div>
            </div>
        </div>
    </form>
</div>