@using com.carzapc.core.web

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

	<title>Grupo Versa - CMS</title>

	<style>
		.cpc-gen-button-all-width {
			width: 90%;
			display: inline-block;
			margin: auto;
		}
	</style>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-4">

			</div>

			<div class="col-sm-12 col-md-4">
				<div class="container-fluid">
					<form class="form" method="post" action="@Url.Action(Utils.Ruta.rutaPostAutenticar.action, Utils.Ruta.rutaPostAutenticar.controller)">
						<div class="form-group">
							<div class="row">
								<div class="col-sm-12 col-md-12">
									<img src="@Url.Content(Recursos.obtUrlImagen("logo.png"))" alt="Logo grupo Versa" style="width: 100%;" />
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<div class="col-sm-12 col-md-12">
									<label class="sr-only">Nombre de usuario</label>
									<input type="email" name="login-correo-usuario" id="login-correo-usuario" class="form-control" maxlength="250" placeholder="Nombre de usuario" required />
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="row">
								<div class="col-sm-12 col-md-12">
									<label class="sr-only">Contraseña</label>
									<input type="password" name="login-password" id="login-password" class="form-control" maxlength="20" placeholder="Contraseña" required />
								</div>
							</div>
						</div>
						@if (ViewBag.mostrar_error != null)
						{
							if (ViewBag.mostrar_error)
							{
								<div class="row">
									<div class="form-group">
										<p>El email o la contraseña no son correctos</p>
									</div>
								</div>
							}
						}
						<div class="form-group">
							<div class="row">
								<div class="col-sm-12 col-md-12 text-center">
									<button type="submit" class="btn btn-info cpc-gen-button-all-width">Ingresar</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>

			<div class="col-sm-12 col-md-4">

			</div>
		</div>
	</div>

	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
